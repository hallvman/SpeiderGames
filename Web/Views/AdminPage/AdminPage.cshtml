@{
    ViewData["title"] = "Admin";
}

@model Game

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminpage/site.css" asp-append-version="true" />
</head>

<div>
    <div class="pageTitle">
        <h3>
            Administrere en konkurranse eller quiz
        </h3>
        
        <div class="adminSearch">
            <form method="post" asp-controller="AdminPage" asp-action="Index">
                <label for="gameName">Skriv inn navn på konkurransen:</label>
                <br />
                <input class="adminSearch" type="text" id="gameName" name="gameName" required/>
                <br />
                <label for="GameCode">Skriv inn coden på konkurransen:</label>
                <br />
                <input type="text" id="GameCode" name="GameCode" required/>
                <br />
                <button class="adminSearch" type="submit">Hvis oversikt</button>
            </form>
        </div>
    </div>
</div>